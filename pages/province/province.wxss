page{
  background-image:url(http://www.datouart.com/upload/20171207/a7de8d04e8d63e15a26d57afbc8c43f6.png)
 
}
.content{
  height: 2981rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}
.content_box{
  width: 92%;
  height: 700rpx;
}
.top_header{
  width: 100%;
  height: 150rpx;
  margin: auto;
}
.top_title{
 width: 100%;
 height: 66rpx;
 line-height: 66rpx;
 font-size: 24rpx;
 color: #a46b34;
}
.input_box .address{
  width: 610rpx;
  height: 80rpx;
  float: left;
  margin-left: 20rpx;
  font-size: 28rpx;
  color: #8a633c;
  line-height: 80rpx
  /* background: firebrick */
}
.input_box{
  width: 100%;
  height: 80rpx;
  border-radius: 12rpx;
  background: #fff;
  opacity: 0.75
}

.input_box image{
  width: 40rpx;
  height: 56rpx;
  float: left;
  margin-top: 15rpx;
  margin-left: 16rpx;
}
.header{
  width: 100%;
  height: 154rpx;
   /* border: 1px saddlebrown solid  */
}
.all{
  font-size: 24rpx;
  color: #a46b34;
  margin-top: 38rpx;
}
 .bar{
  width: 654rpx;
  height: 80rpx;
  border-radius: 12rpx;
  background: #fff;
  opacity: 0.75;
  margin-top: 15rpx;
  padding: 0 16rpx;
  box-shadow: 10rpx 10rpx 10rpx #ddd89a;
  /* border: 1px  solid firebrick */
}
.bar_left{
  width: 300rpx;
  height: 80rpx;
  float: left;
  line-height: 80rpx;
  font-size: 24rpx;
  color: #ae9271
}
.bar_right{
  width: 100rpx;
  height: 80rpx;
  float: right;
  line-height: 80rpx;
  font-size: 20rpx;
  color: #bc9265;
  text-align: right
}
.city_group{
  width: 100%;
  height: 2640rpx;
  /* border: 1px saddlebrown solid; */
}
.city{
  width: 100%;
  height: 2640rpx;
  background: #fff;
  opacity: 0.75;
  border-radius: 12rpx
}
.city_center{
  width: 656rpx;
  height: 2640rpx;
  margin: auto
}
.city_bar{
  width:100%;
  height: 79rpx;
  border-bottom: 1rpx solid #cfcfcf
}
.left{
  float: left;
  color: #8a633c;
  font-size: 24rpx;
  line-height: 80rpx
}
.right{
  float: right;
  font-size: 20rpx;
  color:#a46b34;
  line-height: 80rpx
}