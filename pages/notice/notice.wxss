.content{
  height: 1000rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}
.notice_box{
  width: 92%;
  height: 1204rpx;
  margin: auto
}
.notice_content{
  width: 100%;
  height: 400rpx;
  background: #fff;
  opacity: 0.75;
   border-radius: 12rpx;
   margin-top: 30rpx
}
.notice_bar{
  width: 653rpx;
  height: 100rpx;
  border-bottom: 1rpx solid #cfcfcf;
  margin: auto
}
.notice_bar image{
 width:68rpx;
 height: 68rpx;
 float: left;
 margin-top: 13rpx;

}
.notice_center{
  width: 420rpx;
  height: 100rpx;
  float: left;
  padding-left: 20rpx 
}
.time{
  width: 120rpx;
  height: 80rpx;
  float: right;
  padding-top: 20rpx;
  color: #e0b37e;
  font-size: 22rpx
}
.top{
  width: 100%;
  height: 50%;
  font-size: 28rpx;
  line-height: 50rpx;
  color: #784c21;
}
.bottom{
  width: 100%;
  height: 40%;
  font-size: 24rpx;
  color: #aa7540;
}
