page{
  background-image:url(http://www.datouart.com/upload/20171207/a7de8d04e8d63e15a26d57afbc8c43f6.png)
 
}

.content{
  height: 1204rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}
.content_box{
  width: 92%;
  height: 700rpx;
}
.header{
  width: 100%;
  height: 182rpx;
}
text{
  font-size: 24rpx;
  color: #a46b34;
  margin-top: 24rpx;
}
 .bar{
  width: 654rpx;
  height: 82rpx;
  border-radius: 12rpx;
  background: #fff;
  opacity: 0.75;
  margin-top: 16rpx;
  padding: 0 16rpx
}
.bar_left{
  width: 300rpx;
  height: 82rpx;
  float: left;
  line-height: 82rpx;
  font-size: 24rpx;
  color: #ae9271
}
.bar_right{
  width: 100rpx;
  height: 82rpx;
  float: right;
  line-height: 82rpx;
  font-size: 20rpx;
  color: #bc9265;
  text-align: right
}
.city_group{
  width: 100%;
  height: 800rpx;
}
.city{
  width: 100%;
  height: 800rpx;
  background: #fff;
  opacity: 0.75;
  margin-top: 16rpx;
  border-radius: 12rpx
}
.city_center{
  width: 656rpx;
  height: 800rpx;
  margin: auto
}
.city_bar{
  width:100%;
  height: 79rpx;
  border-bottom: 1rpx solid #cfcfcf
}
.left{
  float: left;
  color: #8a633c;
  font-size: 24rpx;
  line-height: 79rpx
}
.right{
  float: right;
  font-size: 20rpx;
  color:#a46b34;
  line-height: 80rpx
}