<view  class="content" >
  <view class='content_box'>
    <view class='header'>
       <view class='top_title'>当前位置</view>
       <view class='input_box' bindtap='getAddress'>
          <image src='../image/city.png'></image>
          <view class='address'>{{address.nation}}   {{address.province}}  {{address.city}}    {{address.district}} </view>
       </view>
    </view>
    <view class='city_group'>
       <view class='top_title'>已开通城市</view>
       <view class='city'>
         <view class='city_center'>
                <view class='city_bar'>
                  <view class='left'>{{text}}</view>
                  <view class='right'>已选择地区</view>
                </view>
                <view class='city_bar' bindtap='city1'>
                  <view class='left'>杭州市</view>
                </view>
                <view class='city_bar' bindtap='city2'>
                  <view class='left'>上海市</view>
                </view>
                <view class='city_bar' bindtap='city3'>
                  <view class='left' >北京市</view>
                </view>
                <view class='city_bar' bindtap='city4'>
                  <view class='left'>重庆市</view>
                </view>
                <view class='city_bar' style='border:hidden' bindtap='city5'>
                  <view class='left'>广州市</view>
                </view>
         </view>
       </view>
    </view>
  </view>
</view>